{
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/login",
      "rewrite": "/index.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/dashboard/*",
      "rewrite": "/index.html",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/calendar/*",
      "rewrite": "/index.html",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/my-requests/*",
      "rewrite": "/index.html",
      "allowedRoles": ["authenticated"]
    }
  ],
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/6220fa65-7006-464b-877d-fa76518414ce",
          "clientIdSettingName": "AZURE_CLIENT_ID",
          "clientSecretSettingName": "AZURE_CLIENT_SECRET"
        }
      }
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/static/*", "/manifest.json", "/robots.txt"]
  }
}